{
    "name": "YouTube Timestamp Bookmarker",
    "version": "0.0.0",
    "description": "Simple Chromium extension to bookmark and persist timestamps for all YouTube videos. Playback controls (eg. speed, forward, backward, etc.) included as well.",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["https://*.youtube.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*.youtube.com/*"],
        "js": ["utils.js", "contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/bookmark.png",
          "assets/play.png",
          "assets/delete.png",
          "assets/save.png"
        ],
        "matches": ["https://*.youtube.com/*"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "assets/ext-icon.png",
        "24": "assets/ext-icon.png",
        "32": "assets/ext-icon.png"
      },
      "default_title": "YouTube Timestamp Bookmarker",
      "default_popup": "popup.html"
    },
    "manifest_version": 3
}
